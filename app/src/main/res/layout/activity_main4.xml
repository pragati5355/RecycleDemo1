<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/Textxml1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name: "
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/Editxml1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:layout_marginVertical="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear2"
        android:layout_below="@id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/Textxml2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone no : "
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/Editxml2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Mob No"
            android:layout_marginVertical="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Linear3"
        android:layout_below="@id/Linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/Textxml3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G-Mail id : "
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/Editxml3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Mail id"
            android:layout_marginVertical="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Linear4"
        android:layout_below="@id/Linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/Textxml4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Website name:"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/Editxml4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Website name"
            android:layout_marginVertical="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/SubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear4"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="140dp"/>




</RelativeLayout>